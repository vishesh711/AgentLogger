{
  "version": 2,
  "name": "agentlogger",
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "API_V1_STR": "/api/v1",
    "DATABASE_URL": "@database_url",
    "GROQ_API_KEY": "@groq_api_key",
    "SECRET_KEY": "@secret_key",
    "CORS_ORIGINS": "[\"https://agentlogger.vercel.app\"]"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  },
  "functions": {
    "app/main.py": {
      "maxDuration": 30
    }
  }
} 